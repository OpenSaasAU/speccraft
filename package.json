{
  "name": "@opensaas/speccraft",
  "version": "0.0.4",
  "description": "AI-powered specification creation for Claude Code via MCP server and slash commands. Initialize projects with 'npx @opensaas/speccraft init <project-name>'",
  "keywords": [
    "claude-code",
    "mcp",
    "specification",
    "ai",
    "questionnaire",
    "documentation"
  ],
  "author": "SpecCraft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opensaas/speccraft.git"
  },
  "bugs": {
    "url": "https://github.com/opensaas/speccraft/issues"
  },
  "homepage": "https://github.com/opensaas/speccraft#readme",
  "main": "dist/mcp-server/mcp-server/index.js",
  "bin": {
    "speccraft": "bin/speccraft.js"
  },
  "files": [
    "dist/",
    "bin/",
    ".claude/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --build src/mcp-server/tsconfig.json",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm run build && pnpm changeset publish",
    "postinstall": "node bin/postinstall.js",
    "test": "vitest run",
    "dev": "tsx src/mcp-server/index.ts",
    "lint": "eslint src/mcp-server src/lib/specification-engine --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.0.0",
    "eslint": "^9",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
